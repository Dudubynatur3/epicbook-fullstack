[Unit]
Description=EpicBook Node.js Application
After=network.target mysql.service
Wants=mysql.service

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/epicbook
Environment="NODE_ENV=development"
ExecStart=/usr/bin/node /var/www/epicbook/server.js
Restart=on-failure
RestartSec=10

[Install]
WantedBy=multi-user.target
